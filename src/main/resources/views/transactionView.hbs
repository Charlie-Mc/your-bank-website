<!DOCTYPE html>
<html lang="en">
{{>partials/headPartial.hbs}}
<body>
{{>partials/navBarPartial.hbs}}
<div class="container-fluid p-3">

    <div class="container-sm">
        <div class="row justify-content-center pt-4 pb-3">
            <div class="col-3">
                <!-- Sort by -->
                <label for="sortBy" class="text-primary">Sort by:</label>
                <select name="sortBy" id="sortBy" class="form-select">
                    <option value="name">Name</option>
                    <option value="balance">Balance</option>
                </select>
            </div>
            <div class="col-3 d-flex align-items-center justify-content-center">
                <!-- Accounts per page -->
                <p class="text-primary text-bebas fs-4">Transactions shown: {{tCount}}</p>
            </div>
        </div>
    <table class="table table-responsive table-hover table-striped table-light">
        <thead>
        <tr>
            <th scope="col" class="text-primary">ID</th>
            <th scope="col" class="text-primary">From</th>
            <th scope="col" class="text-primary">To</th>
            <th scope="col" class="text-primary">Date</th>
            <th scope="col" class="text-primary">Amount</th>
            <th scope="col" class="text-primary">Currency</th>
            <th scope="col" class="text-primary">Actions</th>

        </tr>
        </thead>
    {{#if normal }}
        <tbody>
        {{#each transactions}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{withdrawAccount}}</td>
                <td>{{depositAccount}}</td>
                <td>{{date}}</td>
                <td>£{{amount}}</td>
                <td>{{currency}}</td>
                <td>  <button type="submit" class="btn btn-outline-steel-teal w-50 align-bottom">
                    repeat transaction
                </button></td>
            </tr>
        {{/each}}
        </tbody>
    {{else if fraud}}
        <tbody>
        {{#each transactions}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{withdrawAccount}}</td>
                <td>{{depositAccount}}</td>
                <td>{{date}}</td>
                <td>£{{amount}}</td>
                <td>{{currency}}</td>

                <td>
                    <form action="http://localhost:8080/transations/repeat" method="POST">
                    <input type="hidden" name="id" value="{{id}}">
                    <input type="hidden" name="withdrawAccount" value="{{withdrawAccount}}">
                    <input type="hidden" name="depositAccount" value="{{depositAccount}}">
                    <input type="hidden" name="date" value="{{date}}">
                    <input type="hidden" name="amount" value="{{amount}}">
                    <input type="hidden" name="currency" value="{{currency}}">
                    <button type="submit" class="btn btn-outline-steel-teal w-50 align-bottom">
                    repeat transaction
                </button>
                    </form></td>

            </tr>
        {{/each}}
        </tbody>
    {{else if all}}
        <tbody>
        {{#each transactions}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{withdrawAccount}}</td>
                <td>{{depositAccount}}</td>
                <td>{{date}}</td>
                <td>£{{amount}}</td>
                <td>{{currency}}</td>
                <td>  <button type="submit" class="btn btn-outline-steel-teal w-100 align-bottom">
                    repeat transaction
                </button></td>
            </tr>
        {{/each}}
        </tbody>
    {{/if}}
    </table>
    </div>
    {{>partials/paginationPartial.hbs}}
</div>
{{>partials/footerPartial.hbs}}
</body>
</html>