<div class="col-md-12 col-xl-12 w-75 col-sm-12 col-lg-12 mx-auto py-2">
    <h1 class="text-center display-4 text-steel-teal text-bebas pt-5">
        Create an account
    </h1>
    <p class="text-steel-teal text-sm text-montserrat text-center">
        Create your account to get started
    </p>
    <div class="form-floating my-4">
        <input type="email" placeholder="Email" name="email" id="email" required class="form-control form-auth">
        <label for="email" class="form-label mb-2">Email</label>
    </div>
    <div class="row my-4">
        <div class="col-6 form-floating">
            <div class="form-floating">
                <input type="text" placeholder="Forename" name="forename" id="forename" required class="form-control form-auth">
                <label for="forename" class="form-label mb-2">Forename</label>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating">
                <input type="text" placeholder="Surname" name="surname" id="surname" required class="form-control form-auth">
                <label for="surname" class="form-label mb-2">Surname</label>
            </div>
        </div>
    </div>
    <button class="btn btn-outline-steel-teal w-100">
        Create your account
    </button>
    <div class="divider my-4">
        Or sign up with the following
    </div>
    <div class="row justify-content-center text-center">
        <div class="col-md-4">
            <i class="bi-facebook fs-2" style="color: #3b5998;"></i>
        </div>
        <div class="col-md-4">
            <i class="bi-google fs-2" style="color: red;"></i>
        </div>
        <div class="col-md-4">
            <i class="bi-twitter fs-2" style="color: #00ACEE;"></i>
        </div>
    </div>
</div>