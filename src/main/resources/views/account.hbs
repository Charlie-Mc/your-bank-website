<html lang="en">
{{>headPartial.hbs}}
<body>

<!-- Table View -->
<table class="border border-2 my-3 mx-3">
    <thead>
    <tr class="border-bottom border-2">
        <th class="pe-4 border-end border-2 p-2">Account Name</th>
        <th class="p-2">id</th>
        <th class="p-3">Balance</th>
        <th class="p-4">Currency</th>
        <th class="p-5">Account Type</th>


    </tr>
    </thead>
    <tbody>
    {{#accounts}}
        <tr class="border-bottom border-2">
            <td class="p-2 border-end border-2">
                <a href="/accounts/{{this.name}}">{{this.name}}</a>
            </td>
            <td class="p-2">
                £{{this.id}}
            </td>
            <td class="p-2">
                £{{this.balance}}
            </td>
            <td class="p-3">
                £{{this.currency}}
            </td>
            <td class="p-4">
                £{{this.accountType}}
            </td>
        </tr>
    {{/accounts}}
    {{#if account}}
        <tr>
            <td class="p-2 border-end border-2">
                <a href="/accounts/{{account.name}}">{{account.name}}</a>
            </td>
            <td class="p-2">
                £{{this.id}}
            </td>
            <td class="p-2">
                £{{this.balance}}
            </td>
            <td class="p-3">
                £{{this.currency}}
            </td>
            <td class="p-4">
                £{{this.accountType}}
            </td>
        </tr>
    {{/if}}
    </tbody>
</table>

